{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        "deployments/**",
        "artifacts/**",
        "typechain-types/**",
        "cache/**"
      ]
    },
    "build:sol": {
      "dependsOn": ["^build:sol"],
      "inputs": ["contracts/**", "package.json", "hardhat.config.ts"],
      "outputs": ["artifacts/**", "typechain-types/**", "cache/**"]
    },
    "build:ts": {
      "dependsOn": ["build:sol", "^build:ts"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "./tslib/**",
        "./test/**"
      ],
      "outputs": ["build/**"]
    },
    "publish-packages": {
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true
    },
    "test": {
      "dependsOn": ["build:ts"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "deploy-contracts": {
      "cache": false,
      "dependsOn": ["build:ts", "^deploy-contracts"]
    },
    "post-deploy-contracts": {
      "cache": false
    }
  }
}
